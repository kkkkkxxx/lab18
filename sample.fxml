<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="sample.Controller">
   <children>
      <Pane prefHeight="300.0" prefWidth="210.0">
         <children>
            <TextArea fx:id="areaMessage" layoutX="5.0" layoutY="5.0" prefHeight="260.0" prefWidth="200.0" />
            <TextField fx:id="textMessage" layoutX="5.0" layoutY="270.0" />
            <Button fx:id="buttonSend" layoutX="160.0" layoutY="270.0" mnemonicParsing="false" onAction="#clickSend" text="Send" />
         </children>
      </Pane>
   </children>
</GridPane>
